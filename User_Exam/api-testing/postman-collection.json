{
  "info": {
    "name": "Exam Platform API",
    "description": "Complete API collection for testing exam platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseURL",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', jsonData.token);",
                  "    pm.test('User registered successfully', function () {",
                  "        pm.expect(jsonData.token).to.be.a('string');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"password123\",\n  \"registrationNumber\": \"REG2025001\"\n}"
            },
            "url": {
              "raw": "{{baseURL}}/auth/register",
              "host": ["{{baseURL}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', jsonData.token);",
                  "    pm.test('Login successful', function () {",
                  "        pm.expect(jsonData.token).to.be.a('string');",
                  "        pm.expect(jsonData.user).to.be.an('object');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseURL}}/auth/login",
              "host": ["{{baseURL}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get User Profile",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Profile retrieved successfully', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.user).to.be.an('object');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseURL}}/auth/profile",
              "host": ["{{baseURL}}"],
              "path": ["auth", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "Exam Management",
      "item": [
        {
          "name": "Get Exam Questions",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Questions retrieved successfully', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.questions).to.be.an('array');",
                  "    pm.expect(jsonData.questions).to.have.length.above(0);",
                  "    pm.collectionVariables.set('firstQuestionId', jsonData.questions[0]._id);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseURL}}/exam/questions",
              "host": ["{{baseURL}}"],
              "path": ["exam", "questions"]
            }
          }
        }
      ]
    },
    {
      "name": "Results Management",
      "item": [
        {
          "name": "Submit Exam",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Exam submitted successfully', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.result).to.be.an('object');",
                  "    pm.collectionVariables.set('resultId', jsonData.result.resultId);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"answers\": [\n    {\n      \"questionId\": \"{{firstQuestionId}}\",\n      \"selectedAnswer\": 0\n    }\n  ],\n  \"timeSpent\": 1200\n}"
            },
            "url": {
              "raw": "{{baseURL}}/results/submit",
              "host": ["{{baseURL}}"],
              "path": ["results", "submit"]
            }
          }
        },
        {
          "name": "Get Single Result",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Result retrieved successfully', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.result).to.be.an('object');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseURL}}/results/{{resultId}}",
              "host": ["{{baseURL}}"],
              "path": ["results", "{{resultId}}"]
            }
          }
        },
        {
          "name": "Get User Results",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('User results retrieved successfully', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.results).to.be.an('array');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseURL}}/results",
              "host": ["{{baseURL}}"],
              "path": ["results"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Server Health",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Server is running', function () {",
                  "    pm.response.to.have.status(200);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseURL}}/health",
              "host": ["{{baseURL}}"],
              "path": ["health"]
            }
          }
        }
      ]
    }
  ]
}